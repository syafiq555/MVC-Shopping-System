<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JomBeli.com</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="shortcut icon" type="image/x-icon" href="image/icon_fjb_400x400.png" />
</head>
<body>
    <nav class="navbar navbar-fixed-top navbar-custom">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("JomBeli", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">

                        <li>@Html.ActionLink("Home", "Index", "Home")</li>

                        @if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Admin"))
        {
                    <li>@Html.ActionLink("Add Product", "Create", "Products")</li>
                    <li>@Html.ActionLink("View Product", "Index", "Products")</li>
                    <li>@Html.ActionLink("View Carts", "Index", "ProductCarts")</li>
                    <li>@Html.ActionLink("View Users", "Index", "Users")</li>
}


else
{
                    <li>@Html.ActionLink("View Product", "Index", "Products")</li>
                    <li>@Html.ActionLink("View Cart", "AddToCart", "Products", new { id = -1 }, htmlAttributes: new { id = "id" })</li>
                    <li>@Html.ActionLink("Purchase History", "History", "Products")</li>


}



                    <li>@Html.ActionLink("Logout", "Logout", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>

}


else
{
                    <li>@Html.ActionLink("Login", "Login", "Account")</li>
                    <li>@Html.ActionLink("Register", "Register", "Account")</li>
}

                    </ul>
                </div>
            </div>
      
    </nav>
    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Shopping website developed by Haikyuu!! Group for PT3 project.</p>
        </footer>
    </div>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
        <link href="~/Content/custom.css" rel="stylesheet" />
    <script src="~/Scripts/customjs.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
</body>

</html>
